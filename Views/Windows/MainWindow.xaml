<Window x:Class="EP_0201_MW.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EP_0201_MW"
        mc:Ignorable="d"
        Title="МастерСклад — Панель управления" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="1000"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D4F66"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#3D4F66"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2,0,0,0"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
        </Style>

        <Style x:Key="BottomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#BDC3C7"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D4F66"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Сайдбар -->
        <Grid Background="#2C3E50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Верхняя часть сайдбара -->
            <StackPanel Grid.Row="0" Margin="0,20,0,0">
                <TextBlock Text="МАСТЕРСКЛАД" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <!-- Кнопки навигации -->
                <Button x:Name="BtnMain" 
                        Content="🏠 Главная" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="Menu_Click" 
                        Tag="Main"/>
                <Button x:Name="BtnClients" 
                        Content="👥 Клиенты" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="Menu_Click" 
                        Tag="Clients"/>
                <Button x:Name="BtnLeases" 
                        Content="📄 Договоры" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="Menu_Click" 
                        Tag="Leases"/>
                <Button x:Name="BtnReports" 
                        Content="📊 Отчёты" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="Menu_Click" 
                        Tag="Reports"/>

                <Separator Margin="10,20" Background="#3D4F66"/>
            </StackPanel>

            <!-- Нижняя часть сайдбара -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <Button x:Name="BtnHelp" 
                        Content="❓ Помощь" 
                        Style="{StaticResource BottomButtonStyle}" 
                        Click="BtnHelp_Click"
                        ToolTip="Получить справку по работе с программой"/>

                <Button x:Name="BtnExit" 
                        Content="🚪 Выход" 
                        Style="{StaticResource BottomButtonStyle}" 
                        Click="BtnExit_Click"
                        Foreground="#E74C3C"/>

                <TextBlock Text="v1.0 .NET 10" 
                           Foreground="#7F8C8D" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"
                           FontSize="11"/>
            </StackPanel>
        </Grid>

        <!-- Основная область -->
        <Grid Grid.Column="1" Background="#ECF0F1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Background="White" BorderBrush="#D7DBDD" BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <TextBlock x:Name="TxtPageTitle" Text="Главная" 
                   VerticalAlignment="Center" 
                   FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock x:Name="TxtUserFio" 
                           Text="ФИО" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
                            <TextBlock x:Name="TxtUserRole" 
                           Text="Роль" 
                           VerticalAlignment="Center" 
                           FontSize="11" 
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="20"/>
        </Grid>
    </Grid>
</Window>