<Window x:Class="EP_0201_MW.Views.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="МастерСклад — Авторизация" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F4F7F6">

    <Grid>
        <Button Click="BtnSettings_Click" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Top" 
        Margin="10"
        Background="Transparent" 
        BorderThickness="0" 
        FontSize="18" 
        Content="⚙️" 
        Cursor="Hand"
        ToolTip="Настройка подключения к базе данных"/>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="📦" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="МАСТЕРСКЛАД" FontSize="24" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Логин" Foreground="#7F8C8D" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtLogin" Height="35" VerticalContentAlignment="Center" Padding="5,0"/>

            <TextBlock Text="Пароль" Foreground="#7F8C8D" Margin="0,15,0,5"/>
            <PasswordBox x:Name="TxtPassword" Height="35" VerticalContentAlignment="Center" Padding="5,0"/>

            <Button Content="Войти" Height="40" Margin="0,30,0,0" 
                    Background="#2C3E50" Foreground="White" FontSize="16" 
                    FontWeight="SemiBold" Cursor="Hand" Click="BtnLogin_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Text="Забыли пароль? Обратитесь к администратору" 
                       HorizontalAlignment="Center" Margin="0,20,0,0" 
                       Foreground="#95A5A6" FontSize="11"/>
        </StackPanel>
    </Grid>
</Window>