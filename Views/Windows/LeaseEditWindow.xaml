<Window x:Class="EP_0201_MW.Views.Windows.LeaseEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные договора" Height="570" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F4F7F6">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ДАННЫЕ ДОГОВОРА" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Номер договора" Foreground="#7F8C8D"/>
            <TextBox x:Name="TxtNumber" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Клиент" Foreground="#7F8C8D"/>
            <ComboBox x:Name="ComboClient" Height="30" Margin="0,5,0,15" DisplayMemberPath="CompanyName"/>

            <TextBlock Text="Склад" Foreground="#7F8C8D"/>
            <ComboBox x:Name="ComboWarehouse" Height="30" Margin="0,5,0,15" DisplayMemberPath="WarehouseNumber"
                      SelectionChanged="ComboWarehouse_SelectionChanged"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Дата начала" Foreground="#7F8C8D"/>
                    <DatePicker x:Name="DpStart" Height="30" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Дата окончания" Foreground="#7F8C8D"/>
                    <DatePicker x:Name="DpEnd" Height="30" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Итоговая сумма" Foreground="#7F8C8D" Margin="0,15,0,0"/>
            <TextBox x:Name="TxtPrice" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Статус оплаты" Foreground="#7F8C8D"/>
            <ComboBox x:Name="ComboPStatus" Height="30" Margin="0,5,0,20" DisplayMemberPath="Title"/>

            <UniformGrid Columns="2">
                <Button Content="Отмена" Height="35" Margin="5" Click="BtnCancel_Click"/>
                <Button Content="Сохранить" Height="35" Margin="5" Background="#2C3E50" Foreground="White" Click="BtnSave_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>