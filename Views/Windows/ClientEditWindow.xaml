<Window x:Class="EP_0201_MW.Views.Windows.ClientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные клиента" Height="500" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F4F7F6">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ДАННЫЕ КЛИЕНТА" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Название компании" Foreground="#7F8C8D"/>
            <TextBox x:Name="TxtCompany" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Фамилия" Foreground="#7F8C8D"/>
                    <TextBox x:Name="TxtLastName" Height="30" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Имя" Foreground="#7F8C8D"/>
                    <TextBox x:Name="TxtFirstName" Height="30" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Отчество" Foreground="#7F8C8D" Margin="0,15,0,0"/>
            <TextBox x:Name="TxtMiddleName" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Телефон" Foreground="#7F8C8D"/>
            <TextBox x:Name="TxtPhone" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Email" Foreground="#7F8C8D"/>
            <TextBox x:Name="TxtEmail" Height="30" Margin="0,5,0,10" VerticalContentAlignment="Center"/>

            <UniformGrid Columns="2" Margin="0,10,0,0">
                <Button Content="Отмена" Height="35" Margin="5" Click="BtnCancel_Click"/>
                <Button Content="Сохранить" Height="35" Margin="5" Background="#2C3E50" Foreground="White" Click="BtnSave_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>