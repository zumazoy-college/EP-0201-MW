<Window x:Class="EP_0201_MW.Views.Windows.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка подключения" Height="180" Width="450" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Строка подключения к SQL Server:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="TxtConnectionString" Padding="5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Проверить и сохранить" Click="BtnSave_Click" Width="150" Height="30" Background="#2ECC71" Foreground="White" BorderThickness="0"/>
                <Button Content="Отмена" Click="BtnCancel_Click" Width="80" Height="30" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>