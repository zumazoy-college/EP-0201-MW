<Window x:Class="EP_0201_MW.Views.Windows.WarehouseEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные склада" Height="450" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F4F7F6">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ДАННЫЕ СКЛАДА" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Номер склада" Foreground="#7F8C8D"/>
            <TextBox x:Name="TxtNumber" Height="30" Margin="0,5,0,15" VerticalContentAlignment="Center"/>

            <TextBlock Text="Объект (Адрес)" Foreground="#7F8C8D"/>
            <ComboBox x:Name="ComboObject" Height="30" Margin="0,5,0,15" DisplayMemberPath="Address"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Площадь (м²)" Foreground="#7F8C8D"/>
                    <TextBox x:Name="TxtArea" Height="30" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Цена в месяц" Foreground="#7F8C8D"/>
                    <TextBox x:Name="TxtPrice" Height="30" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Статус" Foreground="#7F8C8D" Margin="0,15,0,0"/>
            <ComboBox x:Name="ComboStatus" Height="30" Margin="0,5,0,20" DisplayMemberPath="Title"/>

            <UniformGrid Columns="2">
                <Button Content="Отмена" Height="35" Margin="5" Click="BtnCancel_Click"/>
                <Button Content="Сохранить" Height="35" Margin="5" Background="#2C3E50" Foreground="White" Click="BtnSave_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>