<Page x:Class="EP_0201_MW.Views.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление клиентами">

    <Page.Resources>
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Border" Background="White" BorderBrush="#D7DBDD" BorderThickness="1" CornerRadius="5"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="Placeholder" Text="Поиск по компании или фамилии..." 
                                       Foreground="Gray" Margin="10,0" VerticalAlignment="Center" 
                                       IsHitTestVisible="False" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="BtnAddClient" Content="➕ Добавить" Width="120" Height="35" Background="#2980B9" Foreground="White" Click="BtnAddClient_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BtnDeleteClient" Content="🗑 Удалить" Width="120" Height="35" Margin="10,0,0,0" Background="#E74C3C" Foreground="White" Click="BtnDeleteClient_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBox x:Name="TxtSearchClient" Width="300" Height="35" Margin="20,0,0,0" 
                     Style="{StaticResource SearchTextBoxStyle}"
                     TextChanged="TxtSearchClient_TextChanged"/>
        </StackPanel>

        <DataGrid x:Name="DGridClients" Grid.Row="1" Margin="10" AutoGenerateColumns="False" 
                  IsReadOnly="True" Background="White" RowHeaderWidth="0" 
                  MouseDoubleClick="DGridClients_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Компания" Binding="{Binding CompanyName}" Width="1.5*"/>
                <DataGridTextColumn Header="Контактное лицо" Width="2*">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1} {2}">
                            <Binding Path="LastNamePerson"/>
                            <Binding Path="FirstNamePerson"/>
                            <Binding Path="MiddleNamePerson"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>