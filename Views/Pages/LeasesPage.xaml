<Page x:Class="EP_0201_MW.Views.Pages.LeasesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Договоры аренды">

    <Page.Resources>
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Border" Background="White" BorderBrush="#D7DBDD" BorderThickness="1" CornerRadius="5"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="Placeholder" Text="Поиск по номеру договора и клиенту..." 
                                       Foreground="Gray" Margin="10,0" VerticalAlignment="Center" 
                                       IsHitTestVisible="False" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="BtnAddLease" Content="➕ Добавить" Click="BtnAdd_Click" Width="120" Height="35" 
                    Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="BtnDeleteLease" Content="🗑 Удалить" Click="BtnDelete_Click" Width="120" Height="35" Margin="10,0,0,0" 
                    Background="#E74C3C" Foreground="White" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBox x:Name="TxtSearchLease" Width="250" Height="35" Margin="20,0,0,0" 
                     Style="{StaticResource SearchTextBoxStyle}"
                     TextChanged="TxtSearchLease_TextChanged"/>

            <Button x:Name="BtnAddService" Content="➕ Услуги" Click="BtnAddService_Click" Width="120" Height="35" Margin="10,0,0,0" 
            Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <DataGrid x:Name="DGridLeases" Grid.Row="1" Margin="10" AutoGenerateColumns="False" 
                  IsReadOnly="True" Background="White" RowHeaderWidth="0"
                  MouseDoubleClick="DGridLeases_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Договора" Binding="{Binding ContractNumber}" Width="*"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Client.CompanyName}" Width="1.5*"/>
                <DataGridTextColumn Header="Склад" Binding="{Binding Warehouse.WarehouseNumber}" Width="80"/>
                <DataGridTextColumn Header="Начало" Binding="{Binding StartDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                <DataGridTextColumn Header="Окончание" Binding="{Binding EndDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat=\{0:N2\} ₽}" Width="100"/>
                <DataGridTextColumn Header="Услуги" Width="70">
                    <DataGridTextColumn.Binding>
                        <Binding Path="ProvidedServices.Count">
                            <Binding.FallbackValue>0</Binding.FallbackValue>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Статус" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Pstatus.Title}" 
                                       Foreground="{Binding PstatusId, Converter={StaticResource StatusToColorConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>